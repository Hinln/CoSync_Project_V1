{
  "name": "cosync-backend",
  "version": "1.0.0",
  "private": true,
  "description": "同频 (CoSync) 实名制社交 APP 后端服务",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch server/_core/index.ts",
    "build": "esbuild server/_core/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "NODE_ENV=production node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit generate && drizzle-kit migrate",
    "check": "tsc --noEmit",
    "setup:env": "node scripts/env-wizard.mjs"
  },
  "dependencies": {
    "@trpc/server": "11.7.2",
    "axios": "^1.13.2",
    "cookie": "^1.1.1",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.7",
    "express": "^4.22.1",
    "jose": "6.1.0",
    "mysql2": "^3.16.0",
    "@alicloud/cloudauth20190307": "^3.0.2",
    "@alicloud/openapi-client": "^0.4.8",
    "@alicloud/dysmsapi20170525": "^3.0.1",
    "superjson": "^1.13.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/cookie": "^0.6.0",
    "@types/express": "^4.17.25",
    "@types/node": "^22.19.3",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.8",
    "esbuild": "^0.25.12",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
